// 1. Configuración del generador
generator client {
  provider = "prisma-client-js"
}

// 2. Configuración de la fuente de datos (Asegúrate que el provider sea el correcto)
datasource db {
  provider = "sqlite" // O "sqlite", "mysql", etc.
  url      = env("DATABASE_URL") 
}

// 3. ENUM para los perfiles
enum UserRole {
  VECINO
  COMERCIANTE
  PROFESIONAL
}

// 4. MODELO User
model User {
  // Campos básicos (ID, fechas)
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Campos del registro
  email         String   @unique
  nombre        String
  apellido      String
  
  // Seguridad
  passwordHash  String 
  
  // Perfil
  role          UserRole  @default(VECINO) 
  
  // Puedes añadir una relación futura aquí, por ahora vacío
  // posts         Post[]
}